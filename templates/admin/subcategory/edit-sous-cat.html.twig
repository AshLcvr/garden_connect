{% extends 'layout/admin_base.html.twig' %}

{% block title %}Edit sous-catégorie{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <h2 class="title">Edit category</h2>
{% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="body">
        <div id="contener_form">
            {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
                <div class="bloc_form">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}

                    <small>{{ form_help(form.title) }}</small>

                    <div class="form-error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="bloc_form">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="m-t-20">
        <a href="{{ path('details-sous-cat', {id: subcategory.id}) }}" class="action width-100 text-align-center inline-block">Retour au détails</a>
    <div>
</div>
{% endblock %}
