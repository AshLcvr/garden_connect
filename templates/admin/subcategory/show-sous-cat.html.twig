{% extends 'layout/admin_base.html.twig' %}

{% block title %}Sous-catégorie détails{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <div>
        <h3 class="title">{{ subcategory.title }}</h3>
        <p><span class="m-0 font-weight-bold text-primary">Id : </span>{{ subcategory.id }}</p>
        <p><span class="m-0 font-weight-bold text-primary">Id parent : </span>{{ subcategory.parentCategory.id }}</p>
        <div class="d-flex gap-1">
            <a href="{{ path('edit_sous_cat', {'id': subcategory.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('admin/subcategory/_delete-sous-cat_form.html.twig') }}
        </div>
    </div>
    <div class="m-t-20">
        <a href="{{ path('app_category_show', {id: subcategory.parentCategory.id}) }}" class="btn btn-primary">Retour détails catégorie</a>
    </div>
</div>
{% endblock %}
