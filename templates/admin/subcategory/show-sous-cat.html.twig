{% extends 'layout/admin_base.html.twig' %}

{% block title %}Sous-category d√©tails{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <div class="card">
        <h3 class="title">{{ subcategory.title }}</h3>
        <div class="image-card">
            <img src="{{ asset('asset/images/logo-paul.svg') }}"/>
        </div>
        <div class="description-card">
            <p><span>Id : </span>{{ subcategory.id }}</p>
            <p><span>Id parent : </span>{{ subcategory.parentCategory.id }}</p>
            <div>
                <a href="{{ path('edit-sous-cat', {id: subcategory.id}) }}" class="action">Editer</a>
                {{ include('admin/category/_delete-sous-cat_form.html.twig') }}
            </div>
        </div>
    </div>
    <div class="m-t-20">
        <a href="{{ path('app_category_show', {id: subcategory.parentCategory.id}) }}" class="action width-100 text-align-center inline-block">Retour details category</a>
    </div>
</div>
{% endblock %}
