{% extends 'layout/admin_base.html.twig' %}

{% block title %}Annonce détails{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <div class="card">
        <h3 class="title">{{ boutique.title }}</h3>
        <div class="image-card">
            <img src="{{ asset('asset/images/logo-paul.svg') }}"/>
        </div>
        <div class="description-card">
            <p><span>Description : </span>{{ boutique.description }}</p>
            <p><span>Téléphone : </span>{{ boutique.telephone }}</p>
            <p><span>Adresse : </span>{{ boutique.adress }}</p>
            <p><span>Mis en ligne le : </span>{{ boutique.createdAt|date('d/m/Y') }}</p>
            {% if boutique.actif %}
                <p><span>Status : </span>Actif</p>
                <div>
                    <a href="{{ path('toggle_active_boutique', {id: boutique.id}) }}" class="action">Rendre inactif</a>
            {% else %}
                <p><span>Status : </span>Inactif</p>
                <div>
                    <a href="{{ path('toggle_active_boutique', {id: boutique.id}) }}" class="action">Rendre actif</a>
            {% endif %}
                <a href="{{ path('new_conversation_with_id_boutique', {id: boutique.user.id, id_boutique: boutique.id}) }}" class="action">Demander une modification</a>
                <a href="{{ path('details-user', {id: boutique.user.id}) }}" class="action">Voir l'utilisateur</a>
            </div>
        </div>
    </div>
    <div class="m-t-20">
    {% if boutique.actif %}
        <a href="{{ path('all_boutiques_actives') }}" class="action width-100 text-align-center inline-block">Retour listing Boutiques</a>
    {% else %}
        <a href="{{ path('all_boutiques_inactives') }}" class="action width-100 text-align-center inline-block">Retour listing Boutiques</a>
    {% endif %}
    <div>
</div>
{% endblock %}
