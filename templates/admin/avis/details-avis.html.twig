{% extends 'layout/admin_base.html.twig' %}

{% block title %}Avis d√©tails{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <div class="card">
        <h3 class="title">{{ avi.title }}</h3>
        <div class="image-card">
            <img src="{{ asset('asset/images/logo-paul.svg') }}"/>
        </div>
        <div class="description-card">
            <p><span>Description : </span>{{ avi.commentaire }}</p>
            <p>
                {% for i in 1..5 %}
                    {% if i <= avi.rating %}
                        <i class="fa-solid fa-star favory" data-checked="false" data-note="{{ i }}"></i>
                    {% else %}
                        <i class="fa-solid fa-star" data-checked="false" data-note="{{ i }}"></i>
                    {% endif %}
                {% endfor %}
            </p>
            <p><span>Mis en ligne le : </span>{{ avi.createdAt|date('d/m/Y') }}</p>
            {% if avi.actif %}
                <p><span>Status : </span>Actif</p>
                <div>
                    <a href="{{ path('disable-avis', {id: avi.id}) }}" class="action">Rendre inactif</a>
            {% else %}
                <p><span>Status : </span>Inactif</p>
                <div>
                    <a href="{{ path('active-avis', {id: avi.id}) }}" class="action">Rendre actif</a>
            {% endif %}
                <a href="{{ path('new_conversation_with_id_avis', {id: avi.boutique.user.id, id_avis: avi.id}) }}" class="action">Demander une modification</a>
                <a href="{{ path('details-user', {id: avi.user.id}) }}" class="action">Voir l'utilisateur</a>
            </div>
        </div>
    </div>
    <div class="m-t-20">
        <a href="{{ path('all-avis') }}" class="action width-100 text-align-center inline-block">Retour listing Annonces</a>
    </div>
</div>
{% endblock %}
