{% extends 'layout/admin_base.html.twig' %}

{% block title %}Utilisateurs Actifs{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Utilisateurs actifs</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="js-filter-pagination" id="pagination_box">
                    {{ knp_pagination_render(usersActif) }}
                </div>
                {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
                    <div class="bloc_form">
                        {{ form_label(form.pagination) }}
                        {{ form_widget(form.pagination) }}

                        <small>{{ form_help(form.pagination) }}</small>

                        <div class="form-error">
                            {{ form_errors(form.pagination) }}
                        </div>
                    </div>
                    <div class="bloc_form">
                        {{ form_widget(form.submit) }}
                    </div>
                {{ form_end(form) }}
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>E-mail</th>
                            <th>Roles</th>
                            <th>Vérifier</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>E-mail</th>
                            <th>Roles</th>
                            <th>Vérifier</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for user in usersActif %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email|length > 20 ? user.email|striptags|slice(0, 20) ~ '...' : user.email }}</td>
                                {% if user.roles[1] is defined %}
                                    <td>Vendeur</td>
                                {% else %}
                                        <td>Acheteur</td> 
                                {% endif %}
                                {% if user.isVerified == true %}
                                    <td>Vérifier</td>
                                {% else %}
                                    <td>Non Vérifier</td>
                                {% endif %}
                                <td>{{ user.surname }}</td>
                                <td>{{ user.name }}</td>
                                <td><a href="{{ path('details-user', {id: user.id}) }}" class="btn btn-primary">Détails</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td>Pas de données</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="js-filter-pagination" id="pagination_box">
                    {{ knp_pagination_render(usersActif) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
