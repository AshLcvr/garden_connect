{% extends 'layout/admin_base.html.twig' %}
{% block title %}Mon profil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/flex/flexslider.css') }}" type="text/css">
{% endblock %}
{% block body %}
    <div>
        <div>
            <h4>{{ user.name|capitalize }} {{ user.surname|capitalize }}</h4>
            <div class="m-b-20">
                <a name="Modifier mon profil" class="btn btn-primary" href="{{ path('admin_edit_profil') }}"><i class="fa-solid fa-pen-to-square"></i></a>
            </div>
        </div>
        <div>
            <div>
                <h6>Photo : </h6>
                <div>
                    {% if user.image %}
                        <img src="{{ asset('uploads/profile/'~user.image) }}" alt="images user" style=" width: 10%; border-radius: 50%">
                    {% endif %}
                </div>
            </div>
            <hr>
            <div>
                <h6>Email :</h6>
                {{ user.email  }}
            </div>
            <hr>
            <div>
                <h6>Pr√©nom :</h6>
                {{ user.name }}
            </div>
            <hr>
            <div>
                <h6>Nom :</h6>
                    {{ user.surname }}
            </div>
            <hr>
            <a style="color: var(--orange)" href="{{ path('app_modif_password', {'id' : app.user.id, token : app.user.token }) }}">Modifier mon mot de passe</a>
        </div>
    </div>
{% endblock %}
