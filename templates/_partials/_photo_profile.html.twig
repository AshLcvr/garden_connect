{% if user.image|length != NULL %}
    {% if user.id > 31 or user.id == 1 %}
        <img  class="avatar_avis" src="{{ asset('uploads/profile/' ~ user.image) }}" alt="Photo de profil" />
    {% else %}
        <img class="avatar_avis" src="{{ user.image }}" alt="Photo de profil"  />
    {% endif %}
{% else %}
    <img  class="avatar_avis" src="{{ asset('uploads/profile/incognito-62f7bceeb2bee.png') }}" alt="Photo de profil"  />
{% endif %}