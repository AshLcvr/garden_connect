{% extends 'layout/boutique_base.html.twig' %}

{% block title %}
<title>Mes annonces</title>
{% endblock %}

{% block body %}
    <h1>Mes annonces</h1>

        {% for index, annonce in annonces %}
            {% if annonce.actif %}
                <div class="card shadow mb-4">
                    <a href="#collapse{{ index + 1 }}" class="d-block card-header py-3 collapsed" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseCardExemple">
                        {{ annonce.title }}
                    </a>
                    <div id="collapse{{ index + 1 }}" class="card-body collapse">
                        <div class="d-flex justify-content-between align-items-center p-10 mb-10">
                            {{ annonce.title }}
                        </div>
                    </div>
                </div><br>
                <hr>
            {% else %}
                <h3>Pas encore d'annonce</h3>
            {% endif %}
        {% endfor %}


    <a href="{{ path('app_annonce_new') }}">Create new</a>
    <a href="{{ path('app_annonce_edit', {'id' : 2}) }}">edit new</a>
{% endblock %}
