{% extends 'layout/boutique_base.html.twig' %}

{% block title %}
    <title>Mes annonces</title>
{% endblock %}

{% block body %}
<h1 class="title_top" style="margin: 0">Mes annonces</h1>
<div>
    <div class="block_btn_modify plus">
        <div class="bloc_form btn-custom modify btq plus" style="">
            <span class="hover-effect modify btq">
                <a title="Créer une annonce" class="" href="{{ path('app_annonce_new') }}"><i class="fa-solid fa-plus"></i></a>
            </span>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Catégories</th>
                    <th>Prix</th>
                    <th>Créée le</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if annonces is empty %}
                <tr>
                    <td colspan="6">
                        Pas (encore) d'annonces !
                    </td>
                </tr>
            {% endif %}
            {% for annonce in annonces %}
                <tr>
                    <td>{{ annonce.title }}</td>
                    <td>{{ annonce.subcategory.title }}</td>
                    <td>{{ annonce.price }} €</td>
                    <td>{{ annonce.createdAt|date('Y-m-d') }}</td>
                    <td>
                        {% if annonce.actif == 1 %}
                        <div class="block_btn_modify">
                            <div class="bloc_form btn-custom modify btq">
                                <span class="hover-effect modify btq">
                                    <a title="Désactiver l'annonce" class="" href="{{ path('app_annonce_actif', {'id' : annonce.id}) }}" onclick="return confirm('Voulez-vous vraiment désactiver votre annonce ?')"><i class="fa-regular fa-eye"></i></a>
                                </span>
                            </div>
                        </div>
                        {% else %}
                        <div class="block_btn_inactive">
                            <div class="bloc_form btn-custom inactive">
                                <span class="hover-effect inactive">
                                    <a title="Activer l'annonce" class="" href="{{ path('app_annonce_actif', {'id' : annonce.id}) }}"><i class="fa-regular fa-eye-slash"></i></a>
                                </span>
                            </div>
                        </div>
                        {% endif %}
                    </td>
                    <td class="table_actions" >
                        <div class="block_btn_modify">
                            <div class="bloc_form btn-custom modify btq">
                                <span class="hover-effect modify btq">
                                    <a title="Modifier l'annonce" class="" href="{{ path('app_annonce_edit', {'id' : annonce.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                                </span>
                            </div>
                        </div>
                        <span title="Supprimer l'annonce">{{ include('front/annonce/_delete_form.html.twig') }}</span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}