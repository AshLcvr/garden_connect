{% extends 'layout/front_base.html.twig' %}

{% block title %}
    Recherche d'annonce
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/flex/flexslider.css') }}" type="text/css">
{% endblock %}
{% block body %}
    <div class="wrap d-flex flex-column">
        <div class="js-filter">
            <div class="box-shadow" id="filter_form">
                <h3 class="title">Filter les produits par : </h3>
                {% include 'front/annonce/_filter.html.twig' with {form : recherche, min : min, max : max} only %}
            </div>

            <div class="recherche-tri js-filter-sort">
                <p><u>Trier par :</u></p>
                {% include 'front/annonce/_sort.html.twig' %}
            </div>

            <div class="js-filter-content">
                {% include 'front/annonce/_annonces.html.twig' %}
            </div>

            <div class="js-filter-pagination" id="pagination">
                {{ knp_pagination_render(annonces) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('/asset/flex/jquery.flexslider.js') }}"></script>
{% endblock %}
