{% extends 'layout/front_profil_base.html.twig' %}

{% block title %}
    <title>Messagerie</title>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('Messagerie') }}
{% endblock %}

{% block container %}
    <h1 class="title_top">Mes Conversations</h1>
        <div class="messagerie_listing">
            <div class="users-container">
                <ul class="users">
                    {% for conv in conversations %}
                        <li class="person" data-chat="person1">
                            <div class="box_user">
                                <div class="user">
                                    <span class="status busy"></span>
                                    {% if conv.user.image %}
                                        <img src="{{ asset('uploads/profile/'~conv.user.image) }}" alt="Image de profil">
                                    {% else %}
                                        <img src="{{ asset('images/default-profile-picture.jpg') }}" alt="Image de profil par défaut">
                                    {% endif %}
                                </div>
                                <p class="name-time">
                                    {% if conv.user.name == app.user.name %}
                                        <span class="time init">Conversation commencée par vous</span><br>
                                        <span class="name">{{ app.user.surname }}</span>
                                    {% else %}
                                        <span class="name">{{ conv.user.surname }}</span>
                                    {% endif %}
                                    {% if conv.modifiedAt == null %}
                                        <span class="time">{{ conv.createdAt|date('d/m/Y') }}</span>
                                    {% else %}
                                        <span class="time">{{ conv.modifiedAt|date('d/m/Y') }}</span>
                                    {% endif %}
                                </p>
                            </div>
                            <div class="box_name_time">
                                {% for key, nbr in tabNbrNonlus %}
                                    {% if key == conv.id %}
                                        {% if nbr > 0 %}
                                            <p class="mess_nonlus new">Messages non lus 
                                            <span>{{ nbr }}</span>
                                            </p>
                                        {% else %}
                                            <p class="mess_nonlus none">Pas de nouveaux messages
                                            </p>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                                <div class="block_buttons chat see">
                                    <a title="Voir la conversation" class="conv" href="{{ path('user_messagerie_message', {id: conv.id}) }}">Voir</a>
                                </div>
                            </div>
                        </li>
                    {% else %}
                </ul>
                <p style="font-size: 2rem; text-align: center; color: grey; margin: 3rem 0;">Pas de conversation...</p>
                    {% endfor %}
            </div>
        </div>
    <div class="js-filter-pagination" id="pagination_box">
        {{ knp_pagination_render(conversations) }}
    </div>
{% endblock %}