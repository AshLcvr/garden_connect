<div class="body">
    {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
        <div class="wrap boutique_form border_form">
            <div class="bloc_form rating">
                {{ form_label(form.rating) }}
                <div class="rating" data-rating="0">
                    <i class="star fa-solid fa-star" data-checked="false" data-note="1"></i>
                    <i class="star fa-solid fa-star" data-checked="false" data-note="2"></i>
                    <i class="star fa-solid fa-star" data-checked="false" data-note="3"></i>
                    <i class="star fa-solid fa-star" data-checked="false" data-note="4"></i>
                    <i class="star fa-solid fa-star" data-checked="false" data-note="5"></i>
                </div>
                <div class="bloc_form">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    <small>{{ form_help(form.title) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="bloc_form">
                    {{ form_label(form.commentaire) }}
                    {{ form_widget(form.commentaire) }}
                    <small>{{ form_help(form.commentaire) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.commentaire) }}
                    </div>
                </div>
            </div>
            <div class="block_submit">
                <div class="bloc_form btn-custom btq">
                    <span class="hover-effect btq">
                        <button>{{ button_label|default('Envoyer') }}</button>
                    </span>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>