<form  class="inline-block" method="post" action="{{ path('app_avis_delete', {'id': avi.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet avis ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
    <button class="block_btn_delete">
        <div class="bloc_form btn-custom delete">
            <span class="hover-effect delete">
                <a title="Supprimer cet avis" class="delete_xmark avis"><i class="fa-solid fa-trash"></i></a>
            </span>
        </div>
    </button>
</form>
