<form style="display: inline-block" method="post" action="{{ path('app_boutique_delete', {'id': boutique.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer votre boutique ? Vous avez la possibilité de désactiver votre boutique afin de la rendre invisible aux autres utilisateurs.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ boutique.id) }}">
    <button class="block_btn_delete">
        <div class="bloc_form btn-custom delete">
            <span class="hover-effect delete">
                <a title="Supprimer la boutique"><i class="fa-solid fa-trash"></i></a>
            </span>
        </div>
    </button>
</form>
