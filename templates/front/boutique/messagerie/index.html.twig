                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for conv in conversationsCorresp %}
                <tr>
                    <td>{{ conv.user.email }}</td>
                    <td>{{ conv.correspondant.email }}</td>
                    <td>{{ conv.createdAt|date('Y-m-d') }}</td>
                    {% if conv.modifiedAt != null %}
                        <td>{{ conv.modifiedAt|date('Y-m-d') }}</td>
                    {% endif %}
                    <td class="table_actions" >
                        {# <a title="Editer l'annonce" class="btn btn-primary" href="{{ path('app_annonce_edit', {'id' : annonce.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        {% if annonce.actif == 1 %}
                            <a title="Désactiver l'annonce" class="btn btn-warning" href="{{ path('app_annonce_actif', {'id' : annonce.id}) }}"><i class="fa-regular fa-eye-slash"></i></a>
                        {% else %}
                            <a title="Activer l'annonce" class="btn btn-primary" href="{{ path('app_annonce_actif', {'id' : annonce.id}) }}"><i class="fa-regular fa-eye"></i></a>
                        {% endif %}
                        <span title="Supprimer l'annonce">{{ include('front/annonce/_delete_form.html.twig') }}</span> #}
