{% extends 'layout/boutique_base.html.twig' %}

{% block title %}
 <title>Boutique Messagerie</title>
{% endblock %}

{% block body %}
<div class="card-header py-3 d-flex justify-content-between align-items-center">
    <h3 class="annonce_title" style="margin: 0">Mes Conversations Initiateur</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Initiateur</th>
                <th>Correspondant</th>
                <th>Premier message</th>
                <th>Créer le</th>
                <th>Modifier le</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for conv in conversationsInit %}
                <tr>
                    <td>{{ conv.user.email }}</td>
                    <td>{{ conv.correspondant.email }}</td>
                    <td>{{ conv.premierMessage }}</td>
                    <td>{{ conv.createdAt|date('Y-m-d') }}</td>
                    <td>{% if conv.modifiedAt != null %}{{ conv.modifiedAt|date('Y-m-d') }}{% endif %}</td>
                    <td class="table_actions">
                        <a title="Editer l'annonce" class="btn btn-primary" href="{{ path('boutique_messagerie_message', {'id' : conv.id}) }}">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">pas de conversation</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

