{% extends 'layout/boutique_base.html.twig' %}

{% block title %}<title>Nouveau message</title>{% endblock %}

{% block body %}
<div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5 p-20">
    <h2 class="title">DÃ©marrer une conversation</h2>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="body">
        <div id="contener_form">
            {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
                <div class="bloc_form">
                    {{ form_label(form.premier_message) }}
                    {{ form_widget(form.premier_message) }}

                    <small>{{ form_help(form.premier_message) }}</small>

                    <div class="form-error">
                        {{ form_errors(form.premier_message) }}
                    </div>
                </div>
                <div class="bloc_form">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
