{% extends 'layout/boutique_base.html.twig' %}

{% block title %}
<title>Boutique</title>
{% endblock %}

{% block body %}
<div class="card shadow mb-4 boutique_detail">
    <div class="card-header py-3  d-flex justify-content-between align-items-center">
        <h4 class="annonce_title">{{ boutique.title }}</h4>
        <div>
            <a title="Modifier ma boutique" class="btn btn-primary" href="{{ path('app_boutique_edit', {'id' : boutique.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
            {% if boutique.actif == 1 %}
                <a title="Désactiver la boutique" class="btn btn-primary" href="{{ path('app_boutique_actif', {'id' : boutique.id}) }}" onclick="return confirm('Voulez vous vraiment désactiver votre boutique?')"><i class="fa-regular fa-eye"></i></a>
            {% else %}
                <a title="Activer la boutique" class="btn btn-warning" href="{{ path('app_boutique_actif', {'id' : boutique.id}) }}"><i class="fa-regular fa-eye-slash"></i></a>
            {% endif %}
            {{ include('front/boutique/_delete_form.html.twig') }}
        </div>

    </div>
    <div class="card-body boutique_infos">
        <div class="d-flex flex-column">
            <h6 class="annonce_title">Photo : </h6>
            {%  for imageboutique in boutique.imagesBoutiques %}
                    <img src="{{ asset('uploads/boutique/imageBoutiqueDefault.jpg') }}" alt="Images boutique">
            {% endfor %}
        </div>
        <hr>
        <div class="d-flex flex-column">
            <h6 class="annonce_title">Description:</h6>
            {{ boutique.description  }}
        </div>
        <hr>
         <div class="d-flex flex-column">
            <h6 class="annonce_title">Téléphone:</h6>
             {{ boutique.telephone }}
        </div>
        <hr>
         <div class="d-flex flex-column">
             <h6 class="annonce_title">Adresse:</h6>
             <div class="d-flex flex-column">
                 <div class="text-align-center">
                     {{ boutique.adresse }}
                 </div>
                 <div class="text-align-center">
                     <p><span id="cp"> {{ boutique.codePostal }} </span> <span id="city"> {{ boutique.city }} </span></p>
                 </div>
             </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('back-boutique') }}
{% endblock %}
